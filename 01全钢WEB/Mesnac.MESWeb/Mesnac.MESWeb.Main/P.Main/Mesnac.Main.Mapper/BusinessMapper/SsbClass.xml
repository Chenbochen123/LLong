<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="Mesnac.Main.Mapper.BusinessMapper.SsbClass"
	xmlns="http://ibatis.apache.org/mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

   <statements>
	 <!--查询数据-->
    <sql id="includeSelect">
      <![CDATA[SELECT * FROM SSB_CLASS ]]>
    </sql>
    <!--查询条件-->
    <sql id="includeWhere">
	  <dynamic prepend="WHERE">
        <isNotNull property="where.ObjId" prepend="AND">
          <![CDATA[OBJID = #where.ObjId#]]>
        </isNotNull>
        <isNotNull property="where.ClassName" prepend="AND">
          <![CDATA[CLASS_NAME = #where.ClassName#]]>
        </isNotNull>
        <isNotNull property="where.DeleteFlag" prepend="AND">
          <![CDATA[DELETE_FLAG = #where.DeleteFlag#]]>
        </isNotNull>
        <isNotNull property="where.RecordUserId" prepend="AND">
          <![CDATA[RECORD_USER_ID = #where.RecordUserId#]]>
        </isNotNull>
        <isNotNull property="where.RecordTime" prepend="AND">
          <![CDATA[RECORD_TIME = #where.RecordTime#]]>
        </isNotNull>
        <isNotNull property="where.BakupFlag" prepend="AND">
          <![CDATA[BAKUP_FLAG = #where.BakupFlag#]]>
        </isNotNull>
        <isNotNull property="where.BakupTime" prepend="AND">
          <![CDATA[BAKUP_TIME = #where.BakupTime#]]>
        </isNotNull>
      </dynamic>
    </sql>
    <!--排序条件-->
    <sql id="includeOrderString">
      <isNotNull property="OrderString" prepend="">
        ORDER BY $OrderString$
      </isNotNull>
    </sql>

    <!--查询实例说明-->
    <select id="GetPageDataByReader" parameterClass="map" resultClass="Row"> 
	  <include refid="includeSelect"/>
      <include refid="includeWhere"/>
      <include refid="includeOrderString"/>
    </select>
     <!--获取班组信息-->
     <select id="GetClassList" parameterClass="map" resultClass="Row">
       SELECT OBJID, CLASS_NAME
       FROM SSB_CLASS
       WHERE DELETE_FLAG = 0
       ORDER BY OBJID
     </select>
  </statements>
</sqlMap>
